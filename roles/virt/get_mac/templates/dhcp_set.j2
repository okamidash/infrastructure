{% for interface in xmla.domain.devices.interface %}
{% set network=interface['source']['@network'] %}
{% set mac=interface['mac']['@address'] %}
{% if network == "default" %}
{% set network = 'virtual' %}
{% endif %}
{% if static_mappings[network] is defined %}
{% if inventory_hostname in static_mappings[network] %}
{% set dhcp_prefix = "set service dhcp-server shared-network-name " + network + " subnet " + (system_networks[network].gateway | ipaddr('subnet')) %}
{{ dhcp_prefix }} static-mapping "{{ inventory_hostname_short }}" ip-address {{ static_mappings[network][inventory_hostname] }}
{{ dhcp_prefix }} static-mapping "{{ inventory_hostname_short }}" mac-address {{ mac }}
{% endif %}
{% endif %}
{% endfor %}
